@using Presentation.Mvc.Controllers
@using Presentation.Mvc.Utils
@model ImageUploadModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">

    <h1 class="display-4">Welcome</h1>
    @using (Html.BeginForm(nameof(HomeController.UploadImage), typeof(HomeController).GetControllerName(), FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div>
            <label for="file">Select an image to upload:</label>
            <input type="file" id="file" name="ImageData" asp-for="ImageData" accept="image/*" required/>
        </div>
        <input type="submit" value="Upload Image" class="btn btn-primary mt-2"/>
    }
</div>